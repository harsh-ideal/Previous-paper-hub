<% layout("/layout/boilerplate.ejs")%>
<body>
    <%- include('./includes/navbar.ejs') %>
    <%- include('./includes/flashes.ejs') %>
    <div class="mt-5">
        <h2>Request's List</h2>
        <table class="table table-striped" id="myTable">
            <thead>
                <tr>
                    <th onclick="sortTable(0)">Name</th>
                    <th onclick="sortTable(1)">Course <br> (Department)</th>
                    <th onclick="sortTable(2)">Email</th>
                    <th onclick="sortTable(3)">Post</th>
                    <th onclick="sortTable(4)">Contributions</th>
                    <th onclick="sortTable(5)">Remove</th>
                </tr>
            </thead>
            <tbody>
                <%for(let vip of vips){%>
                    <tr>
                        <td><%=vip.name%></td>
                        
                            <td><%=vip.coursename%> <br> (<%=vip.deptname%>)</td>
                        <td><%=vip.username%></td>
                        <td><%=vip.post%></td>
                        <td><a href="/admin/contro/<%=vip.id%>">All contros</a></td>
                        <td><form method="post" class="form-group" action="/admin/contributers/<%=vip.id%>?_method=delete"><button style="background-color: red; margin-top: 1rem;" onclick="alert(`Did You want to remove this contributer?`)">Remove</button></form></td>
                    </tr>
                <%}%>
            </tbody>
        </table>
        <div style="text-align: center; margin-top: 3rem; margin-bottom: 5rem; opacity: 0.6;">
        <%if(!vips.length){%>
            <div style="text-align: center; margin-top: 6rem; margin-bottom: 5rem; opacity: 0.6;"><h3>No Contributer  Are Available Now</h3></div>
            <%}%>
    </div>


    
      <%- include('./includes/footer.ejs') %>
    <script src="./app.js"></script> 
    <script src="/vip.js"></script>
    
</body>